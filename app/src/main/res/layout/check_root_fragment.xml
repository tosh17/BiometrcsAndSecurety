<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/check_root_method_value"
        style="@style/TextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/check_root_method_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/check_root_method_title" />

    <TextView
        android:id="@+id/tiitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Root Status"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/check_root_method_title"
        style="@style/TextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="checkRootMethod()"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tiitle" />

    <TextView
        android:id="@+id/check_emulator_title"
        style="@style/TextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="isRunningOnEmulator()"
        app:layout_constraintStart_toStartOf="@+id/check_root_method_title"
        app:layout_constraintTop_toBottomOf="@+id/check_root_method_title" />

    <TextView
        android:id="@+id/check_emulator_value"
        style="@style/TextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/check_root_method_value"
        app:layout_constraintTop_toBottomOf="@+id/check_root_method_value" />

    <TextView
        android:id="@+id/check_debug_title"
        style="@style/TextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="isDebuggerConnected"
        app:layout_constraintStart_toStartOf="@+id/check_emulator_title"
        app:layout_constraintTop_toBottomOf="@+id/check_emulator_title" />

    <TextView
        android:id="@+id/check_debug_value"
        style="@style/TextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/check_emulator_value"
        app:layout_constraintTop_toBottomOf="@+id/check_emulator_value" />

    <TextView
        android:id="@+id/check_rootbeer_is_root_title"
        style="@style/TextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="RootBeer.isRooted"
        app:layout_constraintStart_toStartOf="@+id/check_emulator_title"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/check_rootbeer_is_root_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextItem"
        app:layout_constraintBottom_toBottomOf="@+id/check_rootbeer_is_root_title"
        app:layout_constraintEnd_toEndOf="@+id/check_emulator_value"
        app:layout_constraintTop_toTopOf="@+id/check_rootbeer_is_root_title" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_debug_title"
        app:srcCompat="@color/colorPrimary" />

    <TextView
        android:id="@+id/check_rootbeer_isRootedWithBusyBoxCheck_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/TextItem"
        android:text="isRootedWithBusyBoxCheck"
        app:layout_constraintStart_toStartOf="@+id/check_rootbeer_is_root_title"
        app:layout_constraintTop_toBottomOf="@+id/check_rootbeer_is_root_title" />

    <TextView
        android:id="@+id/check_rootbeer_isRootedWithBusyBoxCheck_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/TextItem"
        app:layout_constraintEnd_toEndOf="@+id/check_rootbeer_is_root_value"
        app:layout_constraintTop_toBottomOf="@+id/check_rootbeer_is_root_value" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_rootbeer_isRootedWithBusyBoxCheck_title"
        app:srcCompat="@color/colorPrimary" />

    <TextView
        android:id="@+id/installer_package_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/TextItem"
        android:text="getInstallerPackageName"
        app:layout_constraintStart_toStartOf="@+id/check_rootbeer_isRootedWithBusyBoxCheck_title"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/installer_package_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/TextItem"
        app:layout_constraintEnd_toEndOf="@+id/check_rootbeer_isRootedWithBusyBoxCheck_value"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>